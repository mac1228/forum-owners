<div class="container-fluid content">			
	<div class="col-md-4 col-md-offset-1">	
		<div class="col-md-12">
			<h3 class="dark-grey">Create Profile</h3>
		</div>		
		<form id="profileForm" action = "/createprofile" method = "post">	
			<div class="form-group col-md-12">
				<label>Player Name</label>
				<input type="" name="playername" class="form-control" id="" value="" placeholder="Player Name">
			</div>
			<div class="form-group col-md-12">
				<label>Microsoft Alias</label>
				<input type="" name="alias" class="form-control" id="" value="" placeholder="micurd">
			</div>
			<div class="form-group col-md-12">
				<label>Stack Overflow Username</label>
				<input type="" name="stackoverflow" class="form-control" id="" value="" placeholder="Michael Curd - MSFT">
			</div>
			<div class="form-group col-md-12">
				<label>MSDN Forum Username</label>
				<input type="" name="msdn" class="form-control" id="" value="" placeholder="Michael Curd">
			</div>
			<div class="form-group col-md-6">
				<label>Password</label>
				<input type="password" name="password" class="form-control" id="password1" value="" placeholder="Enter password">
				<span id="8char" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> At least 1 character <i class="fa fa-smile-o"></i>
			</div>
			
			<div class="form-group col-md-6">
				<label>Confirm Password</label>
				<input type="password" name="confirmPassword" class="form-control" id="password2" value="" placeholder="Confirm password">
				<span id="pwmatch" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Passwords Match
			</div>	
			<input id="avatarselection" type="hidden" name="avatar" value="">
			<div class="col-md-12">
				<button type="submit" class="btn btn-primary">Create Profile</button>
			</div>
		</form>
	</div>
	<div class="col-md-5">	
		<div class="col-md-12">
			<h3 class="dark-grey">Choose Avatar</h3>
		</div>
		<% avatars.forEach(function(item){ %>
			<div class="col-md-4">
				<img class="avatar" src="<%= item.url %>">
	  		</div>
		<% }); %>	
	</div>						
</div>