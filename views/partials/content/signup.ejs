<div class="container-fluid content">			
	<div class="col-md-4 col-md-offset-3">	
		<div class="col-md-12">
			<h3 class="dark-grey">Create Profile</h3>
		</div>		
		<form id="profileForm" action = "/post" method = "post">	
			<div class="form-group col-md-12">
				<label>Alias</label>
				<input type="" name="alias" class="form-control" id="" value="" placeholder="Enter Alias">
			</div>
			
			<div class="form-group col-md-6">
				<label>Password</label>
				<input type="password" name="password" class="form-control" id="" value="" placeholder="Enter password">
			</div>
			
			<div class="form-group col-md-6">
				<label>Confirm Password</label>
				<input type="password" name="confirmPassword" class="form-control" id="" value="" placeholder="Confirm password">
			</div>	
			<div class="col-md-12">
				<button type="submit" class="btn btn-primary">Create Profile</button>
			</div>
		</form>
	</div>						
</div>